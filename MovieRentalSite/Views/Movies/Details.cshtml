@model MovieRentalSite.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre</li>
    <li>Release Date: @Model.DateReleased.Value.ToShortDateString()</li>
    <li>Date Added: @Model.DateAdded.Value.ToShortDateString()</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>

